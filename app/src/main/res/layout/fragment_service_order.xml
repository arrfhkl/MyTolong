<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#C61205">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_gravity="center">

    <TextView
        android:id="@+id/customerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name: John Doe"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/customerAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Address: 123 Main St"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/customerNameTextView"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/serviceDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Description: Plumbing"
        android:layout_below="@id/customerAddressTextView"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center">

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#4CAF50"/>

    <Button
        android:id="@+id/rejectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:layout_below="@id/acceptButton"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#E91E63"/>

    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
