<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FDD662">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Provider Register"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/textRegis"
        android:textColor="#C61205"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="#EFDBBC"
        android:layout_below="@id/textRegis"
        android:layout_marginTop="15dp">

        <RadioButton
            android:id="@+id/radioCompany"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="Company"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioIndividual"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="Individual"
            />
    </RadioGroup>

    <EditText
        android:id="@+id/companyNameEditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:hint="Company Name"
        android:visibility="gone"
        android:background="#EFDBBC"
        android:layout_below="@id/textRegis"
        android:layout_marginTop="15dp"/> <!-- Initially hidden -->

    <EditText
        android:id="@+id/fullNameEditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/radioGroup"
        android:layout_marginTop="16dp"
        android:hint="Full Name"
        android:background="#EFDBBC"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/fullNameEditText"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:background="#EFDBBC"/>

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/emailEditText"
        android:layout_marginTop="16dp"
        android:hint="Phone Number"
        android:background="#EFDBBC"/>

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/phoneEditText"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="#EFDBBC"/>

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="16dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:background="#EFDBBC"
        />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmPasswordEditText"
        android:layout_marginTop="24dp"
        android:text="Register"
        android:backgroundTint="#C61205"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
